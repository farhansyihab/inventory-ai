APP_ENV=development
APP_DEBUG=false

MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=inventory_ai
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin

# Untuk keamanan yang lebih baik, tambahkan ini:
MONGODB_URI=mongodb://username:password@localhost:27017/inventory_ai?authSource=admin&tls=true
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRY=3600    # 1 hour
JWT_REFRESH_EXPIRY=2592000 # 30 days